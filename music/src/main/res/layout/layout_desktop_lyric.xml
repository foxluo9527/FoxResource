<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white_10"
        app:layout_constraintBottom_toBottomOf="@id/root"
        app:layout_constraintTop_toTopOf="@id/root" />

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 顶部控制按钮 -->
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:visibility="visible">

            <!-- 锁定按钮 -->
            <ImageView
                android:id="@+id/btn_lock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="锁定按钮"
                android:padding="8dp"
                android:src="@drawable/ic_unlock"
                android:tint="#333333"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_app_round" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 退出按钮 -->
            <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="退出按钮"
                android:padding="8dp"
                android:src="@drawable/ic_close"
                android:tint="#333333"
                android:visibility="visible" />
        </LinearLayout>

        <!-- 歌词内容区域 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <!-- 歌词内容视图 -->
            <com.dirror.lyricviewx.LyricViewX
                android:id="@+id/lyric_content_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center" />

        </FrameLayout>

        <!-- 底部功能按钮 -->
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <!-- 设置按钮 -->
            <ImageView
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="设置按钮"
                android:padding="8dp"
                android:src="@drawable/ic_setting"
                android:tint="#333333"
                android:visibility="visible" />

            <!-- 上一曲按钮 -->
            <ImageView
                android:id="@+id/btn_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:contentDescription="上一曲按钮"
                android:padding="8dp"
                android:src="@drawable/ic_previous"
                android:visibility="visible" />

            <!-- 播放/暂停按钮 -->
            <ImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:contentDescription="播放/暂停按钮"
                android:padding="12dp"
                android:src="@drawable/ic_play"
                android:visibility="visible" />

            <!-- 下一曲按钮 -->
            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:contentDescription="下一曲按钮"
                android:padding="8dp"
                android:src="@drawable/ic_next"
                android:visibility="visible" />

            <!-- 收藏按钮 -->
            <ImageView
                android:id="@+id/btn_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:contentDescription="收藏按钮"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_border"
                android:tint="#333333"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <include layout="@layout/layout_lyric_settings"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
