<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.LinearLayout"
    android:orientation="vertical">
    <!-- 播放全部标题 -->
    <LinearLayout
        android:id="@+id/ll_play_all"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_white_top_r15"
        android:gravity="center_vertical"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/color_ED6C40"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:contentPadding="7dp">

            <ImageView
                android:id="@+id/iv_play_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iv_play"
                android:paddingStart="2dp"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_play_all_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放全部"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_song_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0首"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_all_select"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_all_select" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_all"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_white_top_r15"
        android:elevation="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_select_all"
            style="@style/ThemeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/select_count"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/color_ED6C40"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_music_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white">
        <include layout="@layout/fragment_music_list" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_list_control"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:visibility="gone"
        tools:visibility="visible">
        <!-- 下一首播放 -->
        <TextView
            android:id="@+id/add_to_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_add_to_playing"
            android:gravity="center"
            android:padding="8dp"
            android:text="下一首播放"
            android:textSize="9sp" />

        <!--添加到歌单 -->
        <TextView
            android:id="@+id/add_to_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_ic_add"
            android:gravity="center"
            android:padding="8dp"
            android:text="添加到歌单"
            android:textSize="9sp" />

        <!--下载 -->
        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_download"
            android:gravity="center"
            android:padding="8dp"
            android:text="下载"
            android:textSize="9sp" />

        <!--删除 -->
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_ic_delete"
            android:gravity="center"
            android:padding="8dp"
            android:text="删除"
            android:visibility="gone"
            android:textSize="9sp" />
    </LinearLayout>
</merge>