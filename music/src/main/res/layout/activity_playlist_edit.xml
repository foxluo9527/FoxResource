<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/ic_arrow_left"
        android:title="编辑歌单"
        android:titleTextColor="#333" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp">
                <!-- 封面图片 -->
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/ivCover"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="#f5f5f5"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/ivEditCover"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignRight="@id/ivCover"
                        android:layout_alignBottom="@id/ivCover"
                        android:layout_margin="8dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- 歌单名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/color_FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:shadowColor="#1A000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="歌单名称"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="end"
                    android:paddingLeft="16dp"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

            </LinearLayout>
            <!-- 公开状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:shadowColor="#1A000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公开状态"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xuexiang.xui.widget.button.switchbutton.SwitchButton
                    android:id="@+id/switchIsPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- 简介 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:shadowColor="#1A000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/black"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:lines="1"
                    android:paddingLeft="16dp"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 标签 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical"
                android:padding="16dp"
                android:shadowColor="#1A000000">

                <LinearLayout
                    android:id="@+id/llTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="标签"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSelectedTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:minHeight="40dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivSelectTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <com.xuexiang.xui.widget.layout.ExpandableLayout
                    android:id="@+id/expandable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/xui_config_color_white"
                    app:el_duration="300"
                    app:el_expanded="false">
                    <!-- 标签列表 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_FFFFFF"
                        android:orientation="vertical"
                        android:paddingVertical="10dp"
                        android:shadowColor="#1A000000">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="选择标签（最多3个）"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />

                        <com.xuexiang.xui.widget.flowlayout.FlowLayout
                            android:id="@+id/flTags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>

                </com.xuexiang.xui.widget.layout.ExpandableLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 保存按钮 -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/selector_send_btn"
        android:elevation="4dp"
        android:text="保存"
        android:textColor="@color/color_FFFFFF"
        android:textSize="16sp" />

</LinearLayout>